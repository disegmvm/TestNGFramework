<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke test suite">
    <listeners>
        <listener class-name="com.hrms.utils.Listeners"></listener>
    </listeners>
    <test verbose="2" preserve-order="true"
          name="Smoke tests">
        <groups>
            <run>
                <include name="smoke"></include>
            </run>
        </groups>
        <packages>
            <package name="com.hrms.testcases"></package>
        </packages>
    </test>
</suite>